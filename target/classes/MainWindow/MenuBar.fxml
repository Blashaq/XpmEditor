<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.FXMLController.MenuBarController">
    <Menu mnemonicParsing="false" text="File">
        <MenuItem mnemonicParsing="false" onAction="#handleNewCanvas" text="New" />
        <MenuItem mnemonicParsing="false" onAction="#handleOpenFile" text="Open" />
        <MenuItem mnemonicParsing="false" onAction="#handleSavePictures" text="Save pictures data" />
        <MenuItem mnemonicParsing="false" onAction="#handleSaveCanvas" text="Save canvas" />
    </Menu>
    <Menu mnemonicParsing="false" text="Edit">
      <MenuItem mnemonicParsing="false" onAction="#handleNewPicture" text="New picture" />
      <MenuItem mnemonicParsing="false" onAction="#handleEditPicture" text="Edit picture" />
      <MenuItem mnemonicParsing="false" onAction="#handleDeletePicture" text="Delete picture" />
      <MenuItem mnemonicParsing="false" onAction="#handleClearCanvas" text="Clear canvas" />
      <MenuItem mnemonicParsing="false" onAction="#handleEditDrawOrder" text="Edit draw order" />
    </Menu>
</MenuBar>
